@import 'lib/normalize';
@import '_throbber';
@import '_buttons';
@import '_fonts';
@import '_full-error';
@import '_forms';

html, body {
    background: $bg-color;
    color: $dark-gray;
    grain();
    height: 100%;
    margin: 0;
    min-width: 250px;
}

.hidden {
    display: none;
}

.hidden.show {
    display: block;
}

.page {
    display-flex();
    flex-direction(column);
    margin: 0 auto;
    max-width: 700px;
    min-height: 100%;
    padding: 0 20px 10px;
    position: relative;
    width: 100%;
}

main {
    flex(1, 1, 100%);
    width: 100%;
}

.buttons {
    background: rgba(0,0,0,0.03);
    border-top: 1px solid #ccc;
    line-height: 0;
    margin: 10px -20px -10px;
    padding: 10px;

    .button {
        width: calc(unquote('50% - 5px'));
        margin: 0;

        &:first-child {
            margin-right: 5px
        }

        &:only-child {
            margin: 0;
            width: 100%;
        }
    }
}

.product-image {
    display: inline-block;
    margin-bottom: 20px;
    max-width: 33.333%;
    vertical-align: top;
 }

.product {
    display: inline-block;
    max-width: 66.666%;
    padding-left: 10px;

    .author {
        margin-top: 0;
    }

    .total {
        margin-bottom: 0;
    }

    .price {
        color: $blood-red;
        font-weight: 400;
    }

    .ref {
        color: $dark-gray;
        padding-left: 5px;
    }

    .ref-desc {
        font-size: 10px;
        margin-top: 0;

        &:before {
            content: '*'
            padding-right: 5px;
        }
    }

    .title {
        font-size: 16px;
        font-weight: 500;
        margin: 0 0 0.5em;
    }
}

.payment-info {
    clear: left;
}

hr {
    border: 1px dashed $light-gray;
    border-width: 1px 0 0;
    margin: 5px -20px;
}

.cc-num {
    flex(1);
}

@media $small-min-width {
    .cc-num {
        width: 100%;
    }
}

.save-card,
.postcode {
    flex(1, 1, 100%);
    min-width: 50%;
}

input.postcode {
    padding: inherit 0;
    max-width: 100%;
}

.flex-container .checkbox {
    align-items(center);
}
